extends layout

block content
  div(class='row justify-content-center align-items-center')
    div(class='col-3')
      a(class='btn btn-primary' href='/post') Create New Post
    div(class='col-3')
      input(type='button' class='btn btn-light' id='btnRefresh' value='Refresh Feed') 
    div(class='col-3')
      select(class='form-control' id='orderBy' value='#{orderBy}')
        - items = ['Title', 'Author', 'Created', 'Updated']
        for item in items
          option(value = item selected=orderBy == item) #{item}
    div(class='col-3')
      select(class='form-control' id='order' value='#{order}')
        - items = ['Ascending', 'Descending']
        for item in items
          option(value = item selected=order == item) #{item}
  div(class='row')
    div(class='col-12 post-meta') 
      span Viewing 1-
      span(id='postCount')
      hr
  div(id='feed')
  template(id='postTemplate')
    div(class='row')
      div(class='col-12 post-title')
        h2 {{title}}
      div(class='col-12 post-content')
        div {{post}}
      div(class='col-3 post-meta')
        label Author:&nbsp;
        span {{author}}
      div(class='col-3 post-meta')
        label Created:&nbsp;
        span {{created}}
      div(class='col-3 post-meta')
        div(class='post-updated hidden')
          label Updated:&nbsp;
          span {{updated}}
      div(class='col-3 post-meta text-right')
        a(class='btn-post-edit' data-type='edit' data-id='{{id}}') Edit 
        span &nbsp;|&nbsp;
        a(class='btn-post-del' data-type='del' data-id='{{id}}') Delete
      div(class='col-12')
        hr

block append scripts
  script(src='/javascripts/feed.js')